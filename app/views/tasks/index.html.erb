<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>


<div class="table-responsive">

  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody id="tasks">
      <%= render @tasks %>
    </tbody>
  </table>

  <div id="paginator">
    <%= paginate @tasks, :remote => true %>
  </div>

</div>



<%= link_to 'New Task', new_task_path %>
